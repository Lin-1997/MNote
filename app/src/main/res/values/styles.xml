<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

	<style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

	<style name="BottomDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
	</style>

	<style name="DialogToast.Animation" parent="Animation.AppCompat.Dialog">
		<item name="android:windowEnterAnimation">@anim/translate_dialog_top_in</item>
		<item name="android:windowExitAnimation">@anim/translate_dialog_top_out</item>
	</style>

	<style name="BottomDialog.Animation" parent="Animation.AppCompat.Dialog">
		<item name="android:windowEnterAnimation">@anim/translate_dialog_bottom_in</item>
		<item name="android:windowExitAnimation">@anim/translate_dialog_bottom_out</item>
	</style>

	<style name="MyBlueTheme" parent="AppTheme.NoActionBar">
		<item name="colorPrimary">@color/colorBlue</item>
		<item name="colorPrimaryDark">@color/colorBlue</item>
		<item name="colorAccent">@color/colorBlue</item>
	</style>

	<style name="MyGrayTheme" parent="AppTheme.NoActionBar">
		<item name="colorPrimary">@color/colorGray</item>
