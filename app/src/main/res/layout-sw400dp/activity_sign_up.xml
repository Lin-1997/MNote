<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true"
	tools:context=".SignUpActivity">

	<android.support.constraint.Guideline
		android:id="@+id/GLLogo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.5"/>

	<android.support.constraint.Guideline
		android:id="@+id/GLAccount"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.6"/>

	<android.support.constraint.Guideline
		android:id="@+id/GLNonce"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.7"/>

	<android.support.constraint.Guideline
		android:id="@+id/GLPassword"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.8"/>

	<android.support.constraint.Guideline
		android:id="@+id/GLLeft"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.1"/>

	<android.support.constraint.Guideline
		android:id="@+id/GLRight"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.9"/>

	<android.support.design.widget.AppBarLayout
		android:id="@+id/appBarLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/MyBlueTheme.AppBarOverlay">

		<android.support.v7.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="?attr/colorPrimary"
			app:popupTheme="@style/AppTheme.PopupOverlay"
			app:title="@string/signUp"/>

	</android.support.design.widget.AppBarLayout>

	<de.hdodenhof.circleimageview.CircleImageView
		android:id="@+id/imageViewLogo"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginBottom="32dp"
		android:layout_marginEnd="32dp"
		android:layout_marginStart="32dp"
		android:layout_marginTop="32dp"
		android:scaleType="centerCrop"
		android:src="@drawable/ic_avatar"
		app:layout_constraintBottom_toTopOf="@+id/GLLogo"
		app:layout_constraintEnd_toStartOf="@+id/GLRight"
		app:layout_constraintStart_toStartOf="@+id/GLLeft"
		app:layout_constraintTop_toBottomOf="@+id/appBarLayout"/>

	<RelativeLayout
		android:id="@+id/relativeLayoutAccount"
		android:layout_width="0dp"
		android:layout_height="50dp"
		android:background="@drawable/rectangle_with_radius"
		app:layout_constraintEnd_toStartOf="@+id/GLRight"
		app:layout_constraintStart_toStartOf="@+id/GLLeft"
		app:layout_constraintTop_toTopOf="@+id/GLLogo">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_centerVertical="true"
			android:layout_marginStart="5dp"
			android:padding="4dp"
			app:srcCompat="@drawable/ic_account_black_24dp"/>

		<EditText
			android:id="@+id/editTextAccount"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginEnd="36dp"
			android:layout_marginLeft="36dp"
			android:layout_marginRight="36dp"
			android:layout_marginStart="36dp"
			android:background="@null"
			android:hint="@string/phone"
			android:inputType="phone"
			android:textColorHint="@color/colorCursor"
			android:textCursorDrawable="@drawable/color_cursor"
			android:textSize="24sp"/>

		<ImageView
			android:id="@+id/imageViewAccountClear"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_centerVertical="true"
			android:layout_marginEnd="5dp"
			android:padding="4dp"
			android:visibility="invisible"
			app:srcCompat="@drawable/ic_clear_black_24dp"/>

	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/relativeLayoutNonce"
		android:layout_width="0dp"
		android:layout_height="50dp"
		android:background="@drawable/rectangle_with_radius"
		app:layout_constraintEnd_toStartOf="@+id/GLRight"
		app:layout_constraintStart_toStartOf="@+id/GLLeft"
		app:layout_constraintTop_toTopOf="@+id/GLAccount">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_centerVertical="true"
			android:layout_marginStart="5dp"
			android:padding="4dp"
			app:srcCompat="@drawable/ic_nonce_black_24dp"/>

		<EditText
			android:id="@+id/editTextNonce"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginEnd="144dp"
			android:layout_marginStart="36dp"
			android:background="@null"
			android:hint="@string/nonce"
			android:inputType="phone"
			android:textColorHint="@color/colorCursor"
			android:textCursorDrawable="@drawable/color_cursor"
			android:textSize="24sp"/>

		<ImageView
			android:id="@+id/imageViewNonceClear"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_centerVertical="true"
			android:layout_marginEnd="112dp"
			android:padding="4dp"
			android:visibility="invisible"
			app:srcCompat="@drawable/ic_clear_black_24dp"/>

		<TextView
			android:id="@+id/textViewGetNonce"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_centerVertical="true"
			android:layout_marginEnd="5dp"
			android:clickable="true"
			android:focusable="true"
			android:onClick="textViewGetNonce"
			android:paddingLeft="2dp"
			android:paddingRight="2dp"
			android:text="@string/getNonce"
			android:textColor="@color/colorBlue"
			android:textSize="20sp"/>

	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/relativeLayoutPassword"
		android:layout_width="0dp"
		android:layout_height="50dp"
		android:background="@drawable/rectangle_with_radius"
		app:layout_constraintEnd_toStartOf="@+id/GLRight"
		app:layout_constraintStart_toStartOf="@+id/GLLeft"
		app:layout_constraintTop_toTopOf="@+id/GLNonce">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_centerVertical="true"
			android:layout_marginStart="5dp"
			android:padding="4dp"
			app:srcCompat="@drawable/ic_password_black_24dp"/>

		<EditText
			android:id="@+id/editTextPassword"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginEnd="36dp"
			android:layout_marginLeft="36dp"
			android:layout_marginRight="36dp"
			android:layout_marginStart="36dp"
			android:background="@null"
			android:hint="@string/newPassword"
			android:inputType="textPassword"
			android:textColorHint="@color/colorCursor"
			android:textCursorDrawable="@drawable/color_cursor"
			android:textSize="24sp"/>

		<ImageView
			android:id="@+id/imageViewPasswordClear"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_centerVertical="true"
			android:layout_marginEnd="5dp"
			android:padding="4dp"
			android:visibility="invisible"
			app:srcCompat="@drawable/ic_clear_black_24dp"/>

	</RelativeLayout>

	<Button
		android:id="@+id/buttonSignUp"
		android:layout_width="0dp"
		android:layout_height="50dp"
		android:layout_marginTop="16dp"
		android:background="@drawable/button_blue"
		android:onClick="buttonSignUp"
		android:text="@string/signUp"
		android:textColor="#fff"
		android:textSize="24sp"
		app:layout_constraintEnd_toStartOf="@+id/GLRight"
		app:layout_constraintStart_toStartOf="@+id/GLLeft"
		app:layout_constraintTop_toTopOf="@+id/GLPassword"/>

</android.support.constraint.ConstraintLayout>