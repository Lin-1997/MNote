<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/shape_dialog"
	android:orientation="vertical">

	<TextView
		android:id="@+id/colorBlue"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/selector_blue"
		android:clickable="true"
		android:focusable="true"
		android:gravity="center_horizontal"
		android:onClick="changeColorWith"
		android:paddingBottom="11dp"
		android:paddingTop="11dp"
		android:text="@string/colorBlue"
		android:textColor="@color/colorBlue"
		android:textSize="24sp"/>

	<TextView
		android:id="@+id/colorGray"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/selector_gray"
		android:clickable="true"
		android:focusable="true"
		android:gravity="center_horizontal"
		android:onClick="changeColorWith"
		android:paddingBottom="11dp"
		android:paddingTop="11dp"
		android:text="@string/colorGray"
		android:textColor="@color/colorGray"
		android:textSize="24sp"/>

	<TextView
		android:id="@+id/colorRed"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/selector_red"
		android:clickable="true"
		android:focusable="true"
		android:gravity="center_horizontal"
		android:onClick="changeColorWith"
		android:paddingBottom="11dp"
		android:paddingTop="11dp"
		android:text="@string/colorRed"
		android:textColor="@color/colorRed"
		android:textSize="24sp"/>

	<TextView
		android:id="@+id/colorCyan"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/selector_cyan"
		android:clickable="true"
		android:focusable="true"
		android:gravity="center_horizontal"
		android:onClick="changeColorWith"
		android:paddingBottom="11dp"
		android:paddingTop="11dp"
		android:text="@string/colorCyan"
		android:textColor="@color/colorCyan"
		android:textSize="24sp"/>

	<TextView
		android:id="@+id/colorGreen"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/selector_green"
		android:clickable="true"
		android:focusable="true"
		android:gravity="center_horizontal"
		android:onClick="changeColorWith"
		android:paddingBottom="11dp"
		android:paddingTop="11dp"
