		android:text="@string/colorPink"
		android:textColor="@color/colorPink"
		android:textSize="24sp"/>

	<TextView
		android:id="@+id/colorPurple"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/selector_purple"
		android:clickable="true"
		android:focusable="true"
		android:gravity="center_horizontal"
		android:onClick="changeColorWith"
		android:paddingBottom="11dp"
		android:paddingTop="11dp"
		android:text="@string/colorPurple"
		android:textColor="@color/colorPurple"
		android:textSize="24sp"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/selector_cancel"
		android:clickable="true"
		android:focusable="true"
		android:gravity="center_horizontal"
		android:onClick="changeColorWith"
		android:paddingBottom="11dp"
		android:paddingTop="11dp"
		android:text="@string/cancel"
