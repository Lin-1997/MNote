<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/shape_dialog"
	android:orientation="vertical">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:paddingBottom="11dp"
		android:paddingTop="11dp"
		android:text="@string/changePasswordHint"
		android:textAppearance="@style/TextAppearance.AppCompat.Body1"
		android:textSize="24sp"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="11dp"
		android:paddingTop="11dp">

		<EditText
			android:id="@+id/editTextPasswordOld"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginEnd="32dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="32dp"
			android:layout_marginStart="10dp"
			android:background="@null"
			android:hint="@string/oldPassword"
			android:inputType="textPassword"
			android:textColorHint="@color/colorCursor"
			android:textCursorDrawable="@drawable/color_cursor"
			android:textSize="24sp"/>

		<ImageView
			android:id="@+id/imageViewPasswordOldClear"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:padding="4dp"
			android:visibility="invisible"
			app:srcCompat="@drawable/ic_clear_black_24dp"/>

	</RelativeLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="11dp"
		android:paddingTop="11dp">

		<EditText
			android:id="@+id/editTextPasswordNew"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginEnd="32dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="32dp"
			android:layout_marginStart="10dp"
			android:background="@null"
			android:hint="@string/newPassword"
			android:inputType="textPassword"
			android:textColorHint="@color/colorCursor"
			android:textCursorDrawable="@drawable/color_cursor"
			android:textSize="24sp"/>

		<ImageView
			android:id="@+id/imageViewPasswordNewClear"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:padding="4dp"
			android:visibility="invisible"
			app:srcCompat="@drawable/ic_clear_black_24dp"/>

	</RelativeLayout>

	<TextView
		android:id="@+id/passwordSave"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:clickable="true"
		android:focusable="true"
		android:gravity="center_horizontal"
		android:onClick="changePasswordWith"
		android:paddingBottom="11dp"
		android:paddingTop="11dp"
		android:text="@string/save"
		android:textAppearance="@style/TextAppearance.AppCompat.Body1"
		android:textSize="24sp"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/selector_cancel"
		android:clickable="true"
		android:focusable="true"
		android:gravity="center_horizontal"
		android:onClick="changePasswordWith"
		android:paddingBottom="11dp"
		android:paddingTop="11dp"
		android:text="@string/cancel"
		android:textColor="@color/colorCursor"
		android:textSize="24sp"/>

</LinearLayout>