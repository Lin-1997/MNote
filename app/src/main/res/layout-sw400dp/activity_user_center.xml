<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorActivity"
	android:orientation="vertical">

	<android.support.design.widget.AppBarLayout
		android:id="@+id/appBarLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/AppTheme.AppBarOverlay">

		<android.support.v7.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			app:popupTheme="@style/AppTheme.PopupOverlay"
			app:title="@string/userCenter"/>

	</android.support.design.widget.AppBarLayout>

	<com.lin.utils.UnfoldAndZoomScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true"
		android:fitsSystemWindows="true">

		<android.support.constraint.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:fitsSystemWindows="true"
			android:orientation="vertical">

			<ImageView
				android:id="@+id/imageViewAvatar"
				android:layout_width="0dp"
				android:layout_height="230dp"
				android:clickable="true"
				android:focusable="true"
				android:onClick="changeAvatar"
				android:scaleType="centerCrop"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:srcCompat="@mipmap/ic_head"/>

			<TextView
				android:id="@+id/textViewAccount"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="8dp"
				android:layout_marginStart="8dp"
				android:layout_marginTop="8dp"
				android:textAppearance="@style/TextAppearance.AppCompat.Body1"
				android:textSize="24sp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/imageViewAvatar"
				tools:text="账号"/>

			<View
				android:id="@+id/line1"
				android:layout_width="0dp"
				android:layout_height="1dp"
				android:layout_marginEnd="32dp"
				android:layout_marginStart="32dp"
				android:layout_marginTop="8dp"
				android:background="@color/colorBlue"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/textViewAccount"/>

			<RelativeLayout
				android:id="@+id/changeNoteSort"
				android:layout_width="0dp"
				android:layout_height="50dp"
				android:layout_marginEnd="32dp"
				android:layout_marginStart="32dp"
				android:layout_marginTop="8dp"
				android:background="@drawable/selector_blue"
				android:clickable="true"
				android:focusable="true"
				android:onClick="changeSort"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/line1">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_centerVertical="true"
					android:text="@string/noteSort"
					android:textAppearance="@style/TextAppearance.AppCompat.Body1"
					android:textSize="24sp"/>

			</RelativeLayout>

			<RelativeLayout
				android:id="@+id/changeColor"
				android:layout_width="0dp"
				android:layout_height="50dp"
				android:layout_marginEnd="32dp"
				android:layout_marginStart="32dp"
				android:layout_marginTop="8dp"
				android:background="@drawable/selector_blue"
				android:clickable="true"
				android:focusable="true"
				android:onClick="changeColor"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/changeNoteSort">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_centerVertical="true"
					android:text="@string/changeColor"
					android:textAppearance="@style/TextAppearance.AppCompat.Body1"
					android:textSize="24sp"/>

			</RelativeLayout>

			<View
				android:id="@+id/line2"
				android:layout_width="0dp"
				android:layout_height="1dp"
				android:layout_marginEnd="32dp"
				android:layout_marginStart="32dp"
				android:layout_marginTop="8dp"
				android:background="@color/colorBlue"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/changeColor"/>

			<RelativeLayout
				android:id="@+id/changeName"
				android:layout_width="0dp"
				android:layout_height="50dp"
				android:layout_marginEnd="32dp"
				android:layout_marginStart="32dp"
				android:layout_marginTop="8dp"
				android:background="@drawable/selector_blue"
				android:clickable="true"
				android:focusable="true"
				android:onClick="changeName"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/line2">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_centerVertical="true"
					android:text="@string/changeName"
					android:textAppearance="@style/TextAppearance.AppCompat.Body1"
					android:textSize="24sp"/>

			</RelativeLayout>

			<RelativeLayout
				android:id="@+id/changePassword"
				android:layout_width="0dp"
				android:layout_height="50dp"
				android:layout_marginEnd="32dp"
				android:layout_marginStart="32dp"
				android:layout_marginTop="8dp"
				android:background="@drawable/selector_blue"
				android:clickable="true"
				android:focusable="true"
				android:onClick="changePassword"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/changeName">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_centerVertical="true"
					android:text="@string/changePassword"
					android:textAppearance="@style/TextAppearance.AppCompat.Body1"
					android:textSize="24sp"/>

			</RelativeLayout>

			<View
				android:id="@+id/line3"
				android:layout_width="0dp"
				android:layout_height="1dp"
				android:layout_marginEnd="32dp"
				android:layout_marginStart="32dp"
				android:layout_marginTop="8dp"
				android:background="@color/colorBlue"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/changePassword"/>

			<Button
				android:id="@+id/buttonSignOut"
				android:layout_width="0dp"
				android:layout_height="50dp"
				android:layout_marginEnd="32dp"
				android:layout_marginStart="32dp"
				android:layout_marginTop="16dp"
				android:background="@drawable/button_blue"
				android:onClick="buttonSignOut"
				android:text="@string/signOut"
				android:textColor="#fff"
				android:textSize="24sp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/line3"/>

		</android.support.constraint.ConstraintLayout>

	</com.lin.utils.UnfoldAndZoomScrollView>

</LinearLayout>